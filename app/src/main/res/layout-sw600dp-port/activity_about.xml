<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait_tablet">
    <LinearLayout
        android:id="@+id/layoutAboutCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/borders">
        <TextView
            android:id="@+id/tvLorem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textScaleX="2"

            android:text="@string/lorem1"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:background="@drawable/thin_border"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvLorem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textScaleX="2"
            android:text="@string/lorem2"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:background="@drawable/thin_border"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvLorem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textScaleX="2"
            android:text="@string/lorem3"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:background="@drawable/thin_border"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:text="@string/back"
            android:onClick="onBtnBackClick"/>
    </LinearLayout>
</RelativeLayout>